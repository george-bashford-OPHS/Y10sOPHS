mark = int(input("enter a mark , press -1 to exit")) 
NumberSatExam = 0 
tmark = 0 

while mark > -1 :
  tmark = tmark + mark
  NumberSatExam =  NumberSatExam + 1 
  mark = int(input("enter a mark , press -1 to exit"))
  
averagemark = tmark/NumberSatExam
print(tmark) 
print(NumberSatExam)
print(averagemark)
