def player1game():
    print("press 1 for player 1 game")

def player12game():
    print("press 2 for player 2 game")

def online():
    print("press 3 for online ")

def exit():
    print("press 4 for exit")

def menu() :
    print("press 1 for player 1 game")
    print("press 2 for plauer 2 game")
    print("press 3 for online")
    print("press 4 for exit")

    userinput = int(input("enter 1 , 2 , 3 or 4 "))

    if userinput == 1:
        player1game()
    elif userinput == 2:
        player2game()
    elif userinput == 3 :
        online()
    elif userinput == 4 :
        print("exiting...")
    else:
         print("input invalid")
         menu()

menu()
     
